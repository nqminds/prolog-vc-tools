{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/prolog-statement-vc.schema.json",
  "title": "PrologStatementCredentialSubject",
  "type": "object",
  "properties": {
    "operation": {
      "type": "string",
      "enum": ["assert", "asserta", "assertz", "retract", "retractall"]
    },
    "prolog": {
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdBy": { "type": "string" },
        "permissions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "description": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "required": ["operation", "prolog"],
  "additionalProperties": false
}
